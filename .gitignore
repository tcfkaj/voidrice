!/.conf/wal/templates/zathurarc
!/.conf/wget/wgetrc
!/.conf/x11/xinitrc
!/.conf/x11/xprofile
!/.conf/x11/xresources
!/.conf/zathura/zathurarc
!/.conf/zsh/.zshrc


# whitelist /.local and blacklist it's contents
!/.local
/.local/*

# whitelist /.local/bin except pycache and installed
!/.local/bin
!/.local/bin/*
/.local/bin/__pycache__/
/.local/bin/installed/

# blacklist all of /.local/share except needed files
!/.local/share/applications
!/.local/share/applications/*
!/.local/share/larbs
!/.local/share/larbs/*
!/.local/share/bg
!/.local/share/escher_robot.jpg
