!/.conf/gtk-3.0/settings.ini
!/.conf/lf/cleaner
!/.conf/lf/icons
!/.conf/lf/lfrc
!/.conf/lf/scope
!/.conf/mimeapps.list
!/.conf/mpd/mpd.conf
!/.conf/mpv/input.conf
!/.conf/mpv/scripts/modules.lua
!/.conf/ncmpcpp/bindings
!/.conf/ncmpcpp/config
!/.conf/newsboat/config
!/.conf/newsboat/urls
!/.conf/nvim/init.vim
!/.conf/pinentry/preexec
!/.conf/pipewire/pipewire.conf
!/.conf/pulse/daemon.conf
!/.conf/r/profile
!/.conf/r/environ
!/.conf/redshift/redshift.conf
!/.conf/shell/bm-dirs
!/.conf/shell/bm-files
!/.conf/shell/inputrc
!/.conf/shell/aliasrc
!/.conf/shell/profile
!/.conf/sxiv/exec/key-handler
